<comment>
problem = Hydro Rayleigh Taylor instability in 3D

<job>
problem_id = rt

<parthenon/output1>
file_type = hst        # History data dump
dt        = 0.01       # time increment between outputs

<parthenon/output2>
file_type = hdf5       # Binary data dump
variables = prim   # variables to be output
dt        = 0.02        # time increment between outputs

<parthenon/time>
cfl        = 0.3     # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = 100000  # cycle limit
tlim       = 6.0     # time limit
integrator = vl2     # time integration algorithm
ncycle_out = 1       # interval for stdout summary info

<parthenon/mesh>
nghost = 2                 # Number of ghost zones

nx1    = 64                # Number of zones in X1-direction
x1min  = -0.05             # minimum value of X1
x1max  = 0.05              # maximum value of X1
ix1_bc = periodic          # inner-X1 boundary flag
ox1_bc = periodic          # outer-X1 boundary flag

nx2    = 64                # Number of zones in X2-direction
x2min  = -0.05             # minimum value of X2
x2max  = 0.05              # maximum value of X2
ix2_bc = periodic          # inner-X2 boundary flag
ox2_bc = periodic          # outer-X2 boundary flag

nx3    = 128               # Number of zones in X3-direction
x3min  = -0.1              # minimum value of X3
x3max  = 0.1               # maximum value of X3
ix3_bc = project_pressure  # inner-X3 boundary flag
ox3_bc = project_pressure  # outer-X3 boundary flag

<hydro>
fluid          = euler
eos            = adiabatic
riemann        = hllc
reconstruction = plm
gamma          = 1.66666667  # gamma = C_p/C_v

<problem/rt>
iprob               = 1
perturb_amp         = 0.01
density_ratio       = 2.0
rseed               = -1
const_accel_srcterm = -0.1
